{
  "rules": {
    "userInfo": {
      "$uid": {
        "closed": {
          ".write": "$uid === auth.uid",
          ".read": "$uid === auth.uid"
        },
        "open": {
          ".write": "$uid === auth.uid",
          ".read": "true"
        },
        "orgApproved": {
          ".write": "false",
          ".read": "$uid === auth.uid"
        }
      }
    },
    "needs": {
      ".write": "auth != null",
      ".read": "true",
      ".indexOn": [
        "activeFlag",
        "approved",
        "orgId"
      ]
    },
    "needsPerOrg": {
      ".write": "auth != null",
      ".read": "true"
    },
    "needImageUrls": {
      ".write": "auth != null",
      ".read": "true"
    },
    "imagePaths": {
      ".write": "auth != null",
      ".read": "true"
    },
    "contributionTotalLog": {
      ".write": "false",
      ".read": "true"
    },
    "contributionsPerNeed": {
      ".write": "false",
      ".read": "true"
    },
    "contributionIpn": {
      ".write": "false",
      ".read": "false"
    },
    "payPalTransactions": {
      ".write": "false",
      ".read": "false"
    }
  }
}